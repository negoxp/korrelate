!!!
%html
  %head
    %title Korrelate
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .wrapper
      #header
        .name-form
          %form{:action => "#"}
            %fieldset
              .col
                %strong.logo
                  %a{:href => "#"}
                    = image_tag "logo.png",alt: "image"
                .cols
                  %select
                    %option Advertiser 1
                    %option Advertiser 2
                    %option Advertiser 3
                  %select
                    %option Agency 1
                    %option Agency 2
                    %option Agency 3
              .col
                .select
                  %select.name
                    %option John User
                    %option Preferences
                    %option Help
                    %option Log Out
                %strong.logo.verity
                  %a{:href => "#"}
                    = image_tag 'logo-verity.png', alt: "image"
      / / header
      #main
        = yield
    / / wrapper
    #footer
      %p Copyright Korrelate 2013. All rights reserved
    / / footer
    .popups
      #box.choice-form
        %form{:action => "#"}
          %fieldset
            .heading
              %input#lbl1{:checked => "checked", :name => "name01", :type => "radio"}/
              %label{:for => "lbl1"} Purchase Month
              %input#lbl2{:name => "name01", :type => "radio"}/
              %label{:for => "lbl2"} Event Month
            / / heading
            .cols
              .col
                %h3 start month
                .years
                  .holder
                    %a.prev{:href => "#"} prev
                    %a.next{:href => "#"} next
                    %span 2012
                  %ul
                    %li
                      %a{:href => "#"} Jan
                    %li
                      %a{:href => "#"} feb
                    %li
                      %a{:href => "#"} mar
                    %li.active
                      %a{:href => "#"} apr
                    %li
                      %a{:href => "#"} may
                    %li
                      %a{:href => "#"} jun
                    %li
                      %a{:href => "#"} jul
                    %li
                      %a{:href => "#"} aug
                    %li
                      %a{:href => "#"} sep
                    %li
                      %a{:href => "#"} oct
                    %li
                      %a{:href => "#"} nov
                    %li
                      %a{:href => "#"} dec
                / / years
              / / col
              .col
                %h3.center attribution window
                %h3.text report window
                .table
                  %table
                    %tr
                      %th.col01 &nbsp;
                      %th.col02 1 Mo
                      %th.col3 2 Mo
                      %th.col04 3 Mo
                    %tr
                      %td.col01
                        = image_tag 'bg-text-01.png', alt: "image", height: "46", width: '33'
                      %td.col02
                        .radio-area
                          %input{:name => "name02", :type => "radio"}/
                      %td.col03
                        .radio-area
                          %input{:name => "name02", :type => "radio"}/
                      %td.col04
                        .radio-area
                          %input{:checked => "checked", :name => "name02", :type => "radio"}/
                    %tr
                      %td.col01

                        = image_tag 'bg-text-02.png',alt: "image", height:  "46", width:  "33"
                      %td.col02
                        .radio-area
                          %input{:name => "name02", :type => "radio"}/
                      %td.col03
                        .radio-area
                          %input{:name => "name02", :type => "radio"}/
                      %td.col04
                        .radio-area
                          %input{:name => "name02", :type => "radio"}/
                    %tr
                      %td.col01
                        = image_tag 'bg-text-03.png', alt: "image", height: "46", width: "33"
                      %td.col02
                        .radio-area
                          %input{:name => "name02", :type => "radio"}/
                      %td.col03
                        .radio-area
                          %input{:name => "name02", :type => "radio"}/
                      %td.col04
                        .radio-area
                          %input{:name => "name02", :type => "radio"}/
                / / table
              / / col
              .col
                %h3 Result
                .result
                  %ul
                    %li.color-01 APR
                    %li.color-02 may
                    %li.color-03 jun
                  %ul.level-02
                    %li.color-01 APR
                    %li.color-02 may
                    %li.color-03 jun
                  %ul.level-03
                    %li.color-01 APR
                    %li.color-02 may
                    %li.color-03 jun
              / / col
            / / cols
      / / choice-form

